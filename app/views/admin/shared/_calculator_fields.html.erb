<% if !@object.new_record? && @object.calculator %>
  <h2><%= t('settings') %></h2>
  <% f.fields_for :calculator_attributes do |calculator_form| %>
    <%= calculator_form.label(:calc_type, t("calculator")) %>
    <%= calculator_form.collection_select(:calculator_type, @calculators, :to_s, :description, {}, {:id => "calc-type"}) %>
    <div class="calculator-settings">
      <%= preference_fields(@object.calculator, calculator_form) %>
    </div>
  <% end %>
  <div id="calculator-settings-warning"><%= t('calculator_settings_warning')%></div>
<% end %>  